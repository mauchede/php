#!/bin/bash
set -e -u -x
cd "$(dirname "$0")"/../src

export GENERATED_FOLDER="${PWD}"/../generated
export ROOTFS_FPM_FOLDER="${PWD}"/fpm/rootfs

mkdir -p "${GENERATED_FOLDER}"/fpm
rm -f "${GENERATED_FOLDER}"/fpm/rootfs.tar.gz
cd "${ROOTFS_FPM_FOLDER}"
tar --create --file "${GENERATED_FOLDER}"/fpm/rootfs.tar.gz --gzip --verbose ./
