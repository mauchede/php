#!/bin/sh
set -e -u -x
cd "$(dirname "$0")"/../src

_fail() {
    echo 1>&2 "$1"
    echo 1>&2 "Usage: $(basename "$0") [SCRIPT]"
    exit 255
}

if [ "$#" -lt 1 ]; then
    _fail "Invalid number of arguments."
fi

if [ ! -d "$1" ]; then
    _fail "Image \"$1\" does not exist."
fi

docker build --file "$1"/Dockerfile --tag "${IMAGE:-timonier/php}":"${TAG:-$1}" "$1"
