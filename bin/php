#!/bin/sh

docker run \
    $(env | cut -d= -f1 | awk '{print "-e", $1}') \
    -i \
    -t=$([ -t 0 ] && echo "true" || echo "false") \
    -v /etc/group:/etc/group:ro \
    -v /etc/passwd:/etc/passwd:ro \
    -v /run:/run \
    -v /tmp:/tmp \
    -v "$HOME:$HOME" \
    -v "$PWD:$PWD" \
    -w "$PWD" \
    --net host \
    --rm \
    ${IMAGE:-timonier/php}:${TAG:-7.0.14} gosu $USER php "$@"
